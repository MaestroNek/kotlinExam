<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:padding="15dp"
                android:weightSum="150">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/imageview_poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="102"
                    android:orientation="vertical"
                    android:weightSum="150">

                <TextView
                        android:id="@+id/textview_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="110"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Official Handbook of the Marvel Universe (2004) #11 (X-MEN - AGE OF APOCALYPSE)"
                        android:textSize="20dp"
                        android:textStyle="bold"/>


                <TextView
                        android:id="@+id/textview_price"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="37"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"
                        android:text="Цена"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:id="@+id/textview_description"
                android:layout_weight="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18dp"
                android:text="Описание комикса будет написано здесь и бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла бла "/>
    </LinearLayout>
</ScrollView>